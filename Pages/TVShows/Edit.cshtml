@page
@model HolidayChecklist.Pages.TVShows.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>TVShow</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TVShow.Id" />
            <div class="form-group">
                <label asp-for="TVShow.First_Air_Date" class="control-label"></label>
                <input asp-for="TVShow.First_Air_Date" class="form-control" />
                <span asp-validation-for="TVShow.First_Air_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TVShow.Title" class="control-label"></label>
                <input asp-for="TVShow.Title" class="form-control" />
                <span asp-validation-for="TVShow.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TVShow.Overview" class="control-label"></label>
                <input asp-for="TVShow.Overview" class="form-control" />
                <span asp-validation-for="TVShow.Overview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TVShow.Backdrop_Path" class="control-label"></label>
                <input asp-for="TVShow.Backdrop_Path" class="form-control" />
                <span asp-validation-for="TVShow.Backdrop_Path" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
